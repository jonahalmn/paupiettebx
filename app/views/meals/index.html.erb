<% if user_signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Date</th>
      <th>Location</th>
      <th>Nbpart</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.date %></td>
        <td>rue <%= @user.street %></td>
        <td><%= meal.nbpart %></td>
        <td><%= @user.fname %></td>
        <td><%= link_to "J'y vais", participations_path(:from => meal.id), method: :create %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == true %>
<%= link_to 'New Meal', new_meal_path %>
<%end%>
<% else %>
<p> Vous devez etre connect√© pour acceder a cette page </p>
<%= link_to 'acceuil', pages_about_path %>
<% end %>
