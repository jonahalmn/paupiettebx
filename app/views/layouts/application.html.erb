<body id="body" class="menu-burger-closed">
  <header id="header">
    <nav class="menu-header">

        <%= link_to image_tag("paupiette-logo.svg"), pages_home_path, class: "menu-logo"%>

      <div class="menu-burger" id="menu-burger">
  <div class="icon-bars">
  <div class="icon-bar"></div>
  <div class="icon-bar"></div>
  <div class="icon-bar"></div>
  </div>
  </div>
      <div class="paupiette-container">
        <ul class="onglet-left">
          <li class="menu-li"><a href="<%= meals_path %>">Annonces</a></li>
          <li class="menu-li"><a href="<%= pages_contact_path %>">Contact</a></li>
          <% if user_signed_in? %>
            <% if current_user.role == true %>
              <li class="btn-paupiette"><%= link_to 'Nouveau repas', new_meal_path %></li>
            <%end%>
          <%end%>
        </ul>
        <ul class="onglet-right">
          <% if user_signed_in? %>
          <li id="deroul" class="menu-li deroul closed"><%= current_user.first_name %> <span class="glyphicon glyphicon-user" aria-hidden="true"></span></li>
          <ul id="deroul-menu" class="deroul-menu closed">
            <li><%= link_to 'Mon compte', user_path(current_user) %></li>
            <% if current_user.role == false %>
            <li><%= link_to 'Mon tableau de bord', dashboard_path %></li>
            <%else%>
            <li><%= link_to 'Mon tableau de bord', me_meals_path %></li>
            <%end%>
            <li><%= link_to "Me déconnecter", signout_path %></li>
          </ul>
      <% else %>
          <li class="btn-paupiette"><%= link_to 'Je me connecte', new_user_session_path%></li>
          <li class="btn-paupiette"><%= link_to "Je m'inscris", new_user_registration_path%></li>
        <% end %>
        </ul>
      </div>
    </nav>
  </header>
