<div class="small-container">
<h1>Inscription</h1>

<% @group = params[:episode] %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Prénom %>
    <%= f.text_field :fname, :class => 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :Nom %>
    <%= f.text_field :name, :class => 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :Email %>
    <%= f.text_field :email, autofocus: true, :class => 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :Mot_de_passe %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :Confirmation_du_mot_de_passe%>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'  %>
  </div>

<% if @group == "true" %>
<%= f.hidden_field :role, value: true %>
<% elsif @group == "false" %>
<%= f.hidden_field :role, value: false %>
<% else %>
<div class="field">
  <%= f.label :role %><br />
  <%= f.collection_radio_buttons :role, [[true, 'Chef de cuisine'] ,[false, 'Etudiant']], :first, :last %>
</div>
<% end %>

<p>Complétez votre compte dans votre profil</p>


  <div class="actions">
    <%= f.submit "Inscription" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
